<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="view_ability_form" model="ir.ui.view">
            <field name="name">ability.form</field>
            <field name="model">ability</field>
            <field name="arch" type="xml">
                <form string="Ability">
                    <header>
                        <button name="get_ability" string="Get Ability" type="object" class="oe_highlight"/>
                    </header>
                </form>
            </field>
        </record>

        <record id="view_ability_tree" model="ir.ui.view">
            <field name="name">ability.tree</field>
            <field name="model">ability</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"></field>
                    <field name="ability"></field>
                    <field name="ability_info"></field>
                </tree>
            </field>
        </record>

        <record id="action_ability" model="ir.actions.act_window">
            <field name="name">Ability</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ability</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>